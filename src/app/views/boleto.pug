        tbody
          tr
            td.noborder.nopadding(valign="bottom", colspan="8")
              .logocontainer
                .logobanco
                  img(src="data:image/png;base64,", alt="logo do banco")
                .codbanco #{textoCodigoBarrasTituloCobranca.substring(0,3)}-#{textoCodigoBarrasTituloCobranca.substring(3,4)}
              .linha-digitavel
                | #{linhaDigitavelFormatado}
          tr
            td.top-2(colspan="7")
              .titulo Local de pagamento
              .conteudo
                | Pagável em qualquer agência bancária até o vencimento.
            td.top-2(width="180")
              .titulo Vencimento
              .conteudo.rtl #{dataVencimentoTituloCobranca.replace(/\./gim, '/')}
          tr
            td(colspan="7")
              .titulo Beneficiário
              .conteudo
                | #{razaoSocial} LTDA / CNPJ:
                | #{cnpj}
            td
              .titulo Agência/Código beneficiário
              .conteudo.rtl #{agencia}-#{digitoAgencia} / #{conta}
          tr
            td(width="110", colspan="2")
              .titulo Data do documento
              .conteudo #{dataEmissaoTituloCobranca.replace(/\./gim, '/')}
            td(width="120", colspan="2")
              .titulo Nº documento
              .conteudo
            td(width="60")
              .titulo Espécie doc.
              .conteudo DM
            td
              .titulo Aceite
              .conteudo #{codigoAceiteTituloCobranca}
            td(width="110")
              .titulo Data processamento
              .conteudo #{dataRegistroTituloCobranca.replace(/\./gim, '/')}
            td
              .titulo Nosso número
              .conteudo.rtl #{nossoNumero}
          tr
            td(colspan="2")
              .titulo Uso do banco
              .conteudo
            td
              .titulo Carteira
              .conteudo 17
            td(width="35")
              .titulo Espécie
              .conteudo R$
            td(colspan="2")
              .titulo Quantidade
              .conteudo
            td(width="110")
              .titulo Valor
              .conteudo
            td
              .titulo (=) Valor do Documento
              .conteudo.rtl #{parseFloat(valorOriginalTituloCobranca).toFixed(2).replace(/\./gim, ',')}
          tr
            td(colspan="7")
              .titulo
                | Instruções de responsabilidade do beneficiário. Qualquer dúvida
                | sobre este boleto, contate o beneficiário
            td
              .titulo (-) Descontos / Abatimentos
              .conteudo.rtl
          tr
            td.notopborder(colspan="7")
              .conteudo #{instrucoes || 'Boleto referente a parcela'+ vencimentoBoleto +'.Pagar até a data do vencimento.'}
              .conteudo
            td
              .titulo (-) Outras deduções
              .conteudo.rtl
          tr
            td.notopborder(colspan="7")
              .conteudo
              .conteudo
            td
              .titulo (+) Mora / Multa
              .conteudo.rtl
          tr
            td.notopborder(colspan="7")
              .conteudo
              .conteudo
            td
              .titulo (+) Outros acréscimos
              .conteudo.rtl
          tr
            td.notopborder(colspan="7")
              .conteudo
              .conteudo
            td
              .titulo (=) Valor cobrado
              .conteudo.rtl
          tr
            td(colspan="7")
              .titulo Pagador
              .conteudo
                | #{sacado.nomeSacadoCobranca} / CPF: #{sacado.numeroInscricaoSacadoCobranca}
              .conteudo #{sacado.textoEnderecoSacadoCobranca}, #{sacado.numeroCepSacadoCobranca}
              .conteudo #{sacado.nomeBairroSacadoCobranca} - #{sacado.nomeMunicipioSacadoCobranca} - #{sacado.siglaUnidadeFederacaoSacadoCobranca}
            td.noleftborder
              .titulo(style="margin-top: 50px;") Cód. Baixa
          tr
            td.noleftborder(colspan="6")
              .titulo
                | Sacador/Avalista
                .conteudo.sacador
            td.norightborder.noleftborder(colspan="2")
              .conteudo.noborder.rtl
                | Autenticação mecânica - Ficha de Compensação
          tr
            td.noborder(colspan="8").barcode-box
              .barcode
                | #{textoCodigoBarrasTituloCobranca}
